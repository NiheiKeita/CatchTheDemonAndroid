<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iggy.catchthedemon">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/demon_launch"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/demon_launch"
        android:supportsRtl="true"
        android:hardwareAccelerated="true"
        android:theme="@style/Theme.CatchTheDemon">
        <activity
            android:name=".DescriptionActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".GameActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".TopActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-5047266594533407~2897099533"/>
    </application>

</manifest>