<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".GameActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/game_boad"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/human1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/circle_1"
        app:layout_constraintLeft_toLeftOf="@+id/circle_1"
        android:src="@drawable/human1"/>
    <ImageView
        android:id="@+id/human2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/circle_2"
        app:layout_constraintLeft_toLeftOf="@+id/circle_2"
        android:src="@drawable/human2"/>
    <ImageView
        android:id="@+id/human3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/circle_4"
        app:layout_constraintLeft_toLeftOf="@+id/circle_4"
        android:src="@drawable/human3"/>

    <include
        android:id="@+id/circle_1"
        layout="@layout/light_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="11dp"
        android:visibility="invisible"/>

    <include
        android:id="@+id/circle_2"
        layout="@layout/light_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/circle_3"
        app:layout_constraintBottom_toTopOf="@+id/circle_3"
        android:layout_marginBottom="90dp"
        android:visibility="invisible"/>

    <include
        android:id="@+id/circle_3"
        layout="@layout/light_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/circle_1"
        app:layout_constraintRight_toLeftOf="@+id/circle_6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"/>

    <include
        android:id="@+id/circle_4"
        layout="@layout/light_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/circle_3"
        app:layout_constraintTop_toBottomOf="@+id/circle_3"
        android:layout_marginTop="90dp"
        android:visibility="invisible"/>
    <include
        android:id="@+id/circle_5"
        layout="@layout/light_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/circle_6"
        app:layout_constraintBottom_toTopOf="@+id/circle_6"
        android:layout_marginBottom="90dp"
        android:visibility="invisible"/>


    <include
        android:id="@+id/circle_6"
        layout="@layout/light_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"/>
    <include
        android:id="@+id/circle_7"
        layout="@layout/light_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/circle_6"
        app:layout_constraintTop_toBottomOf="@+id/circle_6"
        android:layout_marginTop="90dp"
        android:visibility="invisible"/>


    <include
        android:id="@+id/circle_8"
        layout="@layout/light_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/circle_9"
        app:layout_constraintBottom_toTopOf="@+id/circle_9"
        android:layout_marginBottom="90dp"
        android:visibility="invisible"/>

    <include
        android:id="@+id/circle_9"
        layout="@layout/light_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/circle_6"
        app:layout_constraintRight_toLeftOf="@+id/circle_11"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"/>

    <include
        android:id="@+id/circle_10"
        layout="@layout/light_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/circle_9"
        app:layout_constraintTop_toBottomOf="@+id/circle_9"
        android:layout_marginTop="90dp"
        android:visibility="invisible"/>

    <include
        android:id="@+id/circle_11"
        layout="@layout/light_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="5dp"
        android:visibility="invisible"/>


    <ImageView
        android:id="@+id/demon_body"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/circle_11"
        app:layout_constraintLeft_toLeftOf="@+id/circle_11"
        android:src="@drawable/demon"/>

    <TextView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="戻る"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/sound_button"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="#3399FF"
        android:textSize="20dp"/>

    <ImageView
        android:id="@+id/sound_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="戻る"
        app:layout_constraintLeft_toRightOf="@+id/back"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="#0000FF"
        android:src="@drawable/sound_active"/>
    <include
        android:id="@+id/win_pop"
        layout="@layout/win_pop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible" />
    <include
        android:id="@+id/lose_pop"
        layout="@layout/lose_pop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible" />


    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adViewGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-5047266594533407/7260221654">
    </com.google.android.gms.ads.AdView>

</androidx.constraintlayout.widget.ConstraintLayout>